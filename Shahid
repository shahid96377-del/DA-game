<body>

<h1>Car Dodge Game</h1>
<div id="scoreBoard">Score: 0 | Coins: 0</div>
<div id="gameArea">
    <div id="playerCar"></div>
</div>

<script>
const gameArea = document.getElementById("gameArea");
const player = document.getElementById("playerCar");
let score = 0;
let coins = 0;
let gameSpeed = 3;
let obstacles = [];
let coinsArr = [];
let lanes = [0,50,100,150,200,250]; // lanes

// Player movement
let playerX = 125;
document.addEventListener("keydown", e=>{
    if(e.key==="ArrowLeft"){playerX-=50;if(playerX<0)playerX=0;}
    if(e.key==="ArrowRight"){playerX+=50;if(playerX>250)playerX=250;}
    player.style.left=playerX+"px";
});
// Mobile swipe
let touchStartX=0;
document.addEventListener("touchstart", e=>{touchStartX=e.touches[0].clientX;});
document.addEventListener("touchend", e=>{
    let touchEndX=e.changedTouches[0].clientX;
    if(touchEndX<touchStartX){playerX-=50;if(playerX<0)playerX=0;}
    else{playerX+=50;if(playerX>250)playerX=250;}
    player.style.left=playerX+"px";
});

// Road lines animation
let roadLines = [];
for(let i=0;i<6;i++){
    const line=document.createElement("div");
    line.classList.add("roadLine");
    line.style.top=(i*100)+"px";
    gameArea.appendChild(line);
    roadLines.push(line);
}
function moveRoadLines(){
    roadLines.forEach(line=>{
        let top=parseInt(line.style.top);
        top+=gameSpeed;
        if(top>500) top=-60;
        line.style.top=top+"px";
    });
}

// Create obstacle
function createObstacle(){
    const obs=document.createElement("div");
    obs.classList.add("obstacle");
    obs.style.left=lanes[Math.floor(Math.random()*lanes.length)]+"px";
    obs.style.background="black";
    gameArea.appendChild(obs);
    obstacles.push(obs);
}
// Create coin
function createCoin(){
    const coin=document.createElement("div");
    coin.classList.add("coin");
    coin.style.left=lanes[Math.floor(Math.random()*lanes.length)]+"px";
    gameArea.appendChild(coin);
    coinsArr.push(coin);
}

// Move obstacles
function moveObstacles(){
    obstacles.forEach((obs,index)=>{
        let top=parseInt(obs.style.top);
        top+=gameSpeed;
        obs.style.top=top+"px";
        // collision
        if(top+100>390 && top<500 && parseInt(obs.style.left)===playerX){
            alert("Game Over! Score: "+score+" | Coins: "+coins);
            location.reload();
        }
        if(top>500){gameArea.removeChild(obs); obstacles.splice(index,1); score++; document.getElementById("scoreBoard").innerText="Score: "+score+" | Coins: "+coins;
        if(score%5===0) gameSpeed+=0.5;}
    });
}

// Move coins
function moveCoins(){
    coinsArr.forEach((coin,index)=>{
        let top=parseInt(coin.style.top);
        top+=gameSpeed;
        coin.style.top=top+"px";
        if(top+30>390 && top<500 && parseInt(coin.style.left)===playerX){
            coins++; gameArea.removeChild(coin); coinsArr.splice(index,1); document.getElementById("scoreBoard").innerText="Score: "+score+" | Coins: "+coins;
        }
        if(top>500){gameArea.removeChild(coin); coinsArr.splice(index,1);}
    });
}

// Game loop
setInterval(()=>{moveObstacles(); moveCoins(); moveRoadLines();},20);
setInterval(createObstacle,1500);
setInterval(createCoin,3000);

</script>
</body>
